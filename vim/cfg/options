" TAB SETTINGS
set tabstop=4
set shiftwidth=4
set softtabstop=4 expandtab

" LINE NUMBERS
set number
set relativenumber

" THEME
syntax on

" CLIPBOARD
" allow y, d and p to use system clipboard
set clipboard=unnamed

" BELL
set vb
set t_vb=

" NORMAL BACKSPACE
set backspace=indent,eol,start

" MAPPING DELAY
set timeoutlen=1000 ttimeoutlen=0

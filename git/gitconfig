[user]
	name = Miguel Almeida
	email = miguelalmeida845@gmail.com

[core]
    excludesfile = ~/.gitignore_global
    editor = vim 
    ignorecase = false

[alias]
    c  = commit --verbose
    g  = log --graph --decorate --oneline
    aa = add --all
    co = checkout
    d  = diff
    dc = diff --cached
    p  = pull
    pu = push
    puf = push --force-with-lease
    s  = status
    b  = branch
    un = reset --hard HEAD
    lg = log --abbrev-commit --pretty='%h (%ad) - [%an] %s %d' --date=format:'%b %d %Y'
    as = rebase -i master --autosquash
    fix = commit --fixup
    stat = !git diff --stat $(git merge-base HEAD "master")
    staging = push origin HEAD:staging

[color]
    ui = true
    interactive = auto 
    branch = auto 
    diff = auto 
    status = auto

[color "branch"]
    current = green bold
    local = green
    remote = red bold

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[branch]
    autosetuprebase = always

[url "https://"]
    insteadOf = git://

[init]
	templatedir = ~/.git-templates
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
